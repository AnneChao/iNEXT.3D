year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

citHeader("To cite iNEXT in publications use:")

citEntry(
		 entry = 'manual',
		 title = paste('iNEXT.3D:', meta$Title),
		 author = personList(as.person("K. H. Hu"),
    	                     as.person("Anne Chao")),
		 year = year,
		 note = note,
		 url = "http://chao.stat.nthu.edu.tw/wordpress/software_download/",
		 textVersion = paste("", note, "URL: http://chao.stat.nthu.edu.tw/wordpress/software-download/.")
)


